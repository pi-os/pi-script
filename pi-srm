#!/bin/bash
loop=true;
figlet Pi - srm;
echo "";
while $loop
 do
  read -e -p "pi-srm > " arg;
  history -s "$arg";
  if [[ $arg = "q" || $arg = "e" || $arg = "exit" || $arg = "quit" ]]
  then
   loop=false;
  elif [[ $arg = "help" || $arg = "h" || $arg = "?" ]]
  then
   srm -h;
  elif [[ $arg = "man" || $arg = "manual" ]]
  then
   man srm;
  elif [[ ${arg%% *} = "cd" ]]
  then
   $arg;
  elif [[ $arg = "" ]]
  then
   echo -n; 
  elif which "${arg%% *}"
  then
   echo;
   echo "result:";
   $arg
  else
   sudo srm $arg;
  fi	
 done
